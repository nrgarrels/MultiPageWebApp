@model PhoneBookModel 
@{
string title = ViewBag.Action + " PhoneBook"; ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2> 

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div> 
    
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div> 
    
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Note">Note</label>
        <input asp-for="Note" class="form-control">
    </div>
    
    <input type="hidden" asp-for="PhoneBookId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button> 
    <a asp-controller="Home" asp-action="Index" 
    class="btn btn-primary">Cancel</a>
</form>
